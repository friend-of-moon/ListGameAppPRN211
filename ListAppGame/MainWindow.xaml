<Window x:Class="ListAppGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListAppGame"
        mc:Ignorable="d"
        Title="ListGameApp" Height="600" Width="700" Background="#E3F2FD" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Border CornerRadius="15" Padding="20" Background="White" Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Welcome to ListGameApp" FontSize="28" FontWeight="Bold" Foreground="#333" TextAlignment="Center" Margin="0,0,0,20"/>
                <WrapPanel HorizontalAlignment="Center" Margin="0,10">
                    <Button Content="Snake Game" Width="200" Height="50" Background="#4CAF50" Foreground="White" FontSize="16" Margin="10" Cursor="Hand"/>
                    <Button Content="Caro Game" Width="200" Height="50" Background="#2196F3" Foreground="White" FontSize="16" Margin="10" Cursor="Hand"/>
                </WrapPanel>
                <WrapPanel HorizontalAlignment="Center" Margin="0,10">
                    <Button Content="Tic Tac Toe" Width="200" Height="50" Background="#FF9800" Foreground="White" FontSize="16" Margin="10" Cursor="Hand"/>
                    <Button Content="Chess Game" Width="200" Height="50" Background="#9C27B0" Foreground="White" FontSize="16" Margin="10" Cursor="Hand"/>
                </WrapPanel>
                <WrapPanel HorizontalAlignment="Center" Margin="0,10">
                    <Button Content="Exit" Width="200" Height="50" Background="#F44336" Foreground="White" FontSize="16" Margin="10" Cursor="Hand" Click="Button_Click" />
                </WrapPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>


